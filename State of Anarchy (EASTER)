local PlayerListGroup = Tabs.ESP:AddRightGroupbox("Player List")

PlayerListGroup:AddToggle("ShowPlayerList", {
    Text = "Show Player List(OPEN Is 'Ctrl')",
    Default = true,
    Tooltip = "Display a list of players (includes admins/devs)",
